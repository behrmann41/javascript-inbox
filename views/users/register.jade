extends ../layout

block content
  .container
    h1.text-center= title
    .row
      .col-md-7.col-md-offset-2
        .text-center
          include errors.jade
        form.form-horizontal(action='/users/register' method='POST')
              .form-group
                label.col-sm-2.control-label(for='username') Username:
                .col-sm-10
                  input#username.form-control(type='text', name='username', placeholder='Username' required)
              .form-group
                label.col-sm-2.control-label(for='email') Email:
                .col-sm-10
                  input#email.form-control(type='email', name='email', placeholder='Email' required)
              .form-group
                label.col-sm-2.control-label(for='password') Password
                .col-sm-10
                  input#password.form-control(type='password', name='password', placeholder='Password')
              .form-group
                label.col-sm-2.control-label(for='pwconfirm') Confirm Password
                .col-sm-10
                  input#pwconfirm.form-control(type='password', name='pwconfirm' placeholder='Password')
              .form-group
                .col-sm-offset-2.col-sm-10
                  button.btn.btn-default(type='submit') Create Account


